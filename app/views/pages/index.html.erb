<div class="hero-body">
  <div class="container has-text-centered">
    <h1 class="title is-2">Welcome to Tutr</h1>
    <h2 class="subtitle">Sign in</h2>

    <div class="columns">
      <div class="column is-one-quarter"></div>
      <div class="column login-box">
        <!-- This form references app/helpers/content_helper.rb -->
        <%= form_for resource_name, :as => resource_name, :url => session_path(resource_name) do |f| %>
        <p class="control"><%= f.label :email, class:"label" %> <%= f.text_field :email, class:"input" %></p>
      
        <p class="control"><%= f.label :password, class:"label" %><%= f.password_field :password, class:"input"%></p>
      
        <% if devise_mapping.rememberable? %>
          <p class="control"><%= f.check_box :remember_me %> <%= f.label :remember_me, class:"checkbox" %></p>
        <% end %>
      
        <p class="control"><%= f.submit "Sign in", class:"button is-primary" %></p>
        <% end %>

        <p><%= link_to "Dont Have An Account? Sign Up", new_user_registration_path %></p>

      </div>
      <div class="column is-one-quarter"></div>

      </div>
  </div>
</div>