<%= form_for(@skill) do |f| %>
  <% if @skill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
      <% @skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card">
    <div class="card-content-create-skills">
      <h1> ADD SKILL </h1><br>

      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :confident %>
        <%= f.check_box :confident %>
      </div>

      <div class="field">
        <%= f.label :need_improvement %>
        <%= f.check_box :need_improvement %>
      </div>

      <div class="actions">
        <%= f.submit %>
    </div>
  </div>
</div>


    <div class="card">
      <div class="card-content table">
    <table class="table is-striped">
      <thead>
        <tr>
          <th>Skill</th>
          <th>Confident</th>
          <th>Need Improvement</th>
          <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>

      <% current_user.skills.each do |skill| %>
        <tr>
          <td><%= skill.name %></td>
          <td><%= convert_boolean(skill.confident) %></td>
          <td><%= convert_boolean(skill.need_improvement) %></td>
          <td><%= link_to 'Delete', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
    </table>
  </div>
</div>
</div>
</div>
<% end %>
