<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Add A Skill</h1>
  <%= render 'indexform' %>

  <table class="table is-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Confident</th>
        <th>Need improvement</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @skills.each do |skill| %>
        <tr>
          <td><%= skill.name %></td>
          <td><%= convert_boolean(skill.confident) %></td>
          <td><%= convert_boolean(skill.need_improvement) %></td>
          <td><%= link_to 'Delete', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Skill', new_skill_path %>
</div>
