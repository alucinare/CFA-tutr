<div class="container">
  <p id="notice"><%= notice %></p>
  <%= render 'indexform' %>
</div>

<div class="card">
  <div class="card-content">
  <table class="table is-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Confident</th>
        <th>Need improvement</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @skills.each do |skill| %>
        <tr>
          <td><%= skill.name %></td>
          <td><%= convert_boolean(skill.confident) %></td>
          <td><%= convert_boolean(skill.need_improvement) %></td>
          <td><%= link_to 'Delete', skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
</div>

  <br>

</div>
